<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.pyeatt.tipcalculator.MainActivity">

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="0"
        android:padding="@dimen/cellpadding"
        android:text="@string/amountText"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/customPercentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="1"
        android:padding="@dimen/cellpadding"
        android:text="@string/customText"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/customTipSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:inputType="number"
        android:max="30"
        android:padding="@dimen/cellpadding"
        android:progress="15"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:progressTint="@android:color/holo_blue_bright"
        tools:thumbTint="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="3"
        android:padding="@dimen/cellpadding"
        android:text="@string/tipText"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="4"
        android:padding="@dimen/cellpadding"
        android:text="@string/totalText"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/percentLinearLayout"
        android:layout_gravity="fill_horizontal"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="2">

        <TextView
            android:id="@+id/percent15TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/cellpadding"
            android:text="@string/percent15Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/percentCustomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:gravity="right|center_vertical"
            android:padding="@dimen/cellpadding"
            android:text="@string/percentCustomText"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tipLinearLayout"
        android:orientation="horizontal"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_width="wrap_content">
        <TextView
            android:id="@+id/tip15TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/cellpadding"
            android:layout_marginRight="@dimen/margin"
            android:background="@android:color/holo_orange_light"/>
        <TextView
            android:id="@+id/tipCustomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/cellpadding"
            android:background="@android:color/holo_orange_light"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/totalLinearLayout"
        android:orientation="horizontal"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_width="wrap_content">
        <TextView
            android:id="@+id/total15TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/cellpadding"
            android:layout_marginRight="@dimen/margin"
            android:background="@android:color/holo_orange_light"/>
        <TextView
            android:id="@+id/totalCustomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/cellpadding"
            android:background="@android:color/holo_orange_light"/>
    </LinearLayout>
    <TextView
        android:id="@+id/amountDisplayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:layout_column="1"
        android:padding="@dimen/cellpadding"
        android:background="@android:color/holo_blue_bright"/>

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:inputType="number"
        android:padding="@dimen/cellpadding"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</GridLayout>
